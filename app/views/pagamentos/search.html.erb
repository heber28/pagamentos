<% title "Pagamentos" %>

<%= form_tag '/search', :method => 'get' do %>
  <p>
    <%= text_field_tag :datepicker, params[:datepicker] %>
    <%= submit_tag "Procurar", :name => nil %>
  </p>
<% end %>


<% unless @pagamentos.nil? %>
  <table>
    <% @pagamentos.each do |pagamento| %>
      <tr>
        <td><%= pagamento.cliente.nome %>&nbsp;&nbsp</td>
        <td><%= l pagamento.data %>&nbsp;&nbsp;</td>
        <td ALIGN="right"><%= number_to_currency pagamento.valor, :format => "%u %n", :separator => ",", :delimiter => ".", :unit => "" %></td>
      </tr>
    <% end %>
  </table>
  <br />
<% end %>
<%= link_to "Voltar", clientes_path %>

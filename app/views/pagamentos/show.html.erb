<% title "Pagamento" %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Data:</strong>
  <%= l @pagamento.data %>
</p>

<p>
  <strong>Valor:</strong>
  <%= number_to_currency @pagamento.valor %>
</p>

<p>
  <%= link_to "Editar", edit_cliente_pagamento_path(@cliente, @pagamento) %> |
  <%= link_to "Excluir", [@cliente, @pagamento], :confirm => 'Tem certeza?', :method => :delete %> |
  <%= link_to "Recibo", receipt_path(:id => @pagamento) %> |
  <%= link_to "Voltar", cliente_pagamentos_path(@cliente) %> 
</p>

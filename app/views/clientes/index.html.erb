<% title "Clientes" %>

<% form_tag clientes_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Procurar", :name => nil %>
  </p>
<% end %>

<ul>
  <% for cliente in @clientes %>
    <li>
      <div class="lista">
        <%= cliente.nome %>
      </div>
      <%= link_to "Ver", cliente %>
      <%= link_to "Editar", edit_cliente_path(cliente) %>
      <%= link_to "Excluir", cliente, :confirm => 'Tem certeza?', :method => :delete %>
      <%= link_to "Pagamentos", cliente_pagamentos_path(cliente) %>
    </li>
    <br />
  <% end %>
</ul>

<p><%= link_to "Novo Cliente", new_cliente_path %></p>

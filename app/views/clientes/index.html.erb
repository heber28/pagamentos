<% title "Clientes" %>

<%= form_tag clientes_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Procurar", :name => nil %>
  </p>
<% end %>

<table>
  <% for cliente in @clientes %>
    <tr>
      <td><%= cliente.nome %></td>
      <td><%= link_to image_tag("profile.png"), cliente %><%= link_to image_tag("paid.png"), cliente_pagamentos_path(cliente)%></td>
    </tr>    
  <% end %>
</table>

<p><%= link_to "Novo Cliente", new_cliente_path %> | <%= link_to "Pagamentos", list_path %> </p>

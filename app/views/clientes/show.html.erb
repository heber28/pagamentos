<% title "Cliente" %>

<p>
  <strong>Nome:</strong>
  <%= @cliente.nome %>
</p>
<p>
  <strong>Endereco:</strong>
  <%= @cliente.endereco %>
</p>
<p>
  <strong>Telefone:</strong>
  <%= @cliente.telefone %>
</p>
<p>
  <strong>Celular:</strong>
  <%= @cliente.celular %>
</p>

<p>
  <%= link_to "Editar", edit_cliente_path(@cliente) %> |
  <%= link_to "Excluir", @cliente, :confirm => 'Tem certeza?', :method => :delete %> |
  <%= link_to "Ver Todos Clientes", clientes_path %> |
  <%= link_to "Ver Pagamentos", cliente_pagamentos_path(@cliente) %>
</p>
